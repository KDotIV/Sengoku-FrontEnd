{
  "routes": [
    {
      "route": "/*",
      "rewrite": "/index.html",
      "exclude": [
        "/*.js",
        "/*.css",
        "/*.png",
        "/*.jpg",
        "/*.jpeg",
        "/*.gif",
        "/*.svg",
        "/*.ico",
        "/*.woff",
        "/*.woff2",
        "/*.ttf",
        "/*.eot",
        "/*.wasm"
      ]
    }
  ],
  "responseOverrides": {
    "404": {
      "rewrite": "/index.html"
    }
  },
  "globalHeaders": {
    "X-Content-Type-Options": "nosniff",
    "Strict-Transport-Security": "max-age=31536000; includeSubDomains",
    "Content-Security-Policy": "default-src 'self'; script-src 'self'; style-src 'self';"
  }
}
